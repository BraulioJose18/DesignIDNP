<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapTransition"
    app:layoutDescription="@xml/activity_map_transition_scene">

    <LinearLayout
        android:id="@+id/img_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:scaleType="centerCrop"
        android:background="#f6f6f6"
        app:layout_constraintBottom_toTopOf="@id/layout_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_marginTop="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="238dp"
                android:layout_height="207dp"
                android:layout_gravity="center|top"
                android:src="@drawable/circle"
                android:contentDescription="TODO" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ubuntu_bold"
                    android:layout_marginTop="50dp"
                    android:text="00:01:00"
                    android:textAlignment="center"
                    android:textColor="#7E604F"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Duracion"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="0.20"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="(km)"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="35dp"
                android:gravity="center"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.9"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(kcal)"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:00"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(min/km)"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingBottom="32dp"
            android:text="Lorem ipsum dolor sitaesent quam eros, vehicula volutpat bibendum sit amet, tempor nec nisi. Aenean urna metus, mattis nec nunc ac, viverra dapibus sapien. Curabitur semper facilisis risus, sed mattis massa congue vitae. Nullam eu purus efficitur, finibus elit et, posuere tellus. Suspendisse vitae turpis sed turpis elementum dictum sagittis eu purus. Praesent et magna euismod, volutpat nisi vitae, vehicula risus. Suspendisse congue est quis ligula fermentum, ut auctor justo eleifend. Sed porttitor mattis ante dignissim elementum.  Maecenas auctor lacinia libero et malesuada. Nullam placerat lectus quis turpis pretium auctor. Phasellus cursus fringilla rhoncus. Curabitur nec velit vel ligula consectetur scelerisque. Donec varius lacus nec nulla efficitur, vel pulvinar diam pretium. Donec lectus lacus, aliquet sit amet vestibulum id, convallis sed mauris. Vestibulum nec iaculis felis. Aliquam vitae eros feugiat dolor lacinia mollis. Pellentesque luctus an" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/img_background"
        android:background="@drawable/corner_background">

        <TextView
            android:id="@+id/title_motion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp"
            android:textColor="@color/black"
            android:text="TextView" />
    </LinearLayout>
</androidx.constraintlayout.motion.widget.MotionLayout>